                    <!--android:textColor="@color/color_212121"-->
                    <!--android:textSize="@dimen/wz_20sp" />-->

                <!--<View-->
                    <!--android:layout_width="@dimen/bj_2dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginBottom="@dimen/bj_15dp"-->
                    <!--android:layout_marginLeft="@dimen/bj_20dp"-->
                    <!--android:layout_marginTop="@dimen/bj_15dp"-->
                    <!--android:background="#D0D0D0" />-->

            <!--</LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_2dp"
                android:layout_marginLeft="@dimen/bj_20dp"
                android:layout_marginRight="@dimen/bj_20dp"
                android:background="#D0D0D0" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_base_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

