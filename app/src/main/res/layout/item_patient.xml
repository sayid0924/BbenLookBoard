<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bj_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_patient"
        android:layout_width="230dp"
        android:layout_height="@dimen/bj_140dp"
        android:paddingRight="@dimen/bj_20dp">

        <RelativeLayout
            android:id="@+id/rl_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bednum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="01"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_20sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginTop="@dimen/bj_15dp"
            android:layout_toRightOf="@+id/rl_no" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:layout_toRightOf="@+id/iv_sex"
            android:maxLines="1"
            android:maxWidth="@dimen/bj_80dp"
            android:text="王健军"
            android:textSize="@dimen/wz_20sp"
            android:textColor="@color/color_2B2B2B" />


        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/bj_10dp"
            android:maxLines="1"
            android:maxWidth="@dimen/bj_80dp"
            android:text=""
            android:textSize="@dimen/wz_20sp"
            android:textColor="@color/color_2B2B2B" />



        <TextView
            android:id="@+id/tv_cureno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/bj_10dp"
            android:layout_marginLeft="@dimen/bj_50dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="123456"
            android:textSize="@dimen/wz_20sp"
            android:textColor="@color/color_2B2B2B" />

        <TextView
            android:id="@+id/tv_nurselevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cureno"
            android:layout_marginBottom="@dimen/bj_10dp"
            android:layout_marginLeft="@dimen/bj_70dp"
            android:layout_marginTop="@dimen/bj_5dp"
            android:text="一级护理"
            android:textSize="@dimen/wz_20sp"
            android:textColor="@color/color_2B2B2B" />

    </RelativeLayout>

</LinearLayout>
