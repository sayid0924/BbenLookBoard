<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_doctor_advice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/bj_50dp">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@drawable/alert_test">

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_ClientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddddd"/>

        <TextView
            android:id="@+id/tv_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_2B2B2B"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/bj_150dp"
            android:layout_height="@dimen/bj_60dp"
            android:layout_below="@+id/tv_toggle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_10dp"
            android:background="@drawable/button_bg"
            android:text="关闭"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </RelativeLayout>

</RelativeLayout>


