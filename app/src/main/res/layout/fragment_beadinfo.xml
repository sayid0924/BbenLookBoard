            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_danger"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_ms_danger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_danger"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_danger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="重"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_peril"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_perill"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_perill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_perill"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_peril"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="危级"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_super"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_super"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_toRightOf="@+id/iv_super"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="特级护理"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_toRightOf="@+id/iv_one"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="l级护理"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_toRightOf="@+id/iv_two"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ll级护理"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_toRightOf="@+id/iv_three"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
