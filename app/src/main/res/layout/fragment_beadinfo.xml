        <RelativeLayout
            android:id="@+id/rl_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_operation"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_operation"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="手术"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_autoscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_weight="1"
