                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="lll级护理"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_empty"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_empty"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="空床"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_present"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_present"
                android:background="@drawable/red_bubble_bg"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="现床"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hospitalized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_hospitalized"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_message_hospitalized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_hospitalized"
